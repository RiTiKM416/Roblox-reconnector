<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>REblox Admin</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap');

        :root {
            --bg-body: #0f172a;
            /* Deep Slate */
            --bg-card: rgba(30, 41, 59, 0.7);
            /* Translucent Slate */
            --bg-input: #0f172a;
            --border-color: rgba(255, 255, 255, 0.08);
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --primary-blue: #6366f1;
            /* Soothing Indigo */
            --primary-hover: #4f46e5;
            --success: #10b981;
            --danger: #ef4444;
            --card-radius: 16px;
            /* Softer corners */
            --input-radius: 10px;
            --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
            --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--bg-body);
            color: var(--text-main);
            margin: 0;
            padding: 4rem 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            position: relative;
            overflow-x: hidden;
        }

        /* Ambient Glow Effect */
        body::before {
            content: '';
            position: fixed;
            top: -20%;
            left: 50%;
            transform: translateX(-50%);
            width: 80vw;
            height: 80vh;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.15) 0%, rgba(15, 23, 42, 0) 70%);
            z-index: -1;
            pointer-events: none;
        }

        .container {
            width: 100%;
            max-width: 950px;
            z-index: 1;
        }

        .header {
            margin-bottom: 3rem;
            text-align: center;
        }

        h1 {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(to right, #ffffff, #94a3b8);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0 0 0.75rem 0;
            letter-spacing: -0.02em;
        }

        .header p {
            color: var(--text-muted);
            margin: 0;
            font-size: 1.1rem;
            font-weight: 400;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .card {
            background-color: var(--bg-card);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-radius: var(--card-radius);
            padding: 1.75rem;
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-md);
            display: flex;
            flex-direction: column;
            justify-content: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
            border-color: rgba(255, 255, 255, 0.15);
        }

        .card h3 {
            margin: 0 0 1rem 0;
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .card .value {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-main);
            margin: 0;
            display: flex;
            align-items: center;
        }

        .status-dot {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 14px;
            box-shadow: 0 0 10px currentColor;
        }

        .online {
            color: var(--success);
            background-color: var(--success);
        }

        .offline {
            color: var(--danger);
            background-color: var(--danger);
        }

        .btn {
            background: linear-gradient(135deg, var(--primary-blue), var(--primary-hover));
            color: white;
            border: none;
            padding: 0.85rem 1.5rem;
            border-radius: var(--input-radius);
            font-weight: 600;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.2s ease;
            box-shadow: 0 4px 14px 0 rgba(99, 102, 241, 0.39);
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(99, 102, 241, 0.4);
        }

        .btn:active {
            transform: translateY(1px);
        }

        .btn.stop {
            background: transparent;
            border: 1px solid rgba(239, 68, 68, 0.5);
            color: var(--danger);
            box-shadow: none;
        }

        .btn.stop:hover {
            background: rgba(239, 68, 68, 0.1);
            border-color: var(--danger);
        }

        .controls {
            display: flex;
            gap: 1rem;
            margin-bottom: 2.5rem;
            justify-content: center;
        }

        .logs {
            background-color: var(--bg-card);
            backdrop-filter: blur(12px);
            border-radius: var(--card-radius);
            padding: 2rem;
            border: 1px solid var(--border-color);
            margin-top: 2rem;
            overflow-x: auto;
            box-shadow: var(--shadow-md);
        }

        .logs h2,
        .admin-section h2 {
            margin-top: 0;
            color: var(--text-main);
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: left;
            margin-top: 1rem;
        }

        th,
        td {
            padding: 1.25rem 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        th {
            color: var(--text-muted);
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        tbody tr {
            transition: background-color 0.2s ease;
        }

        tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.02);
        }

        tr:last-child td {
            border-bottom: none;
        }

        a.link {
            color: var(--primary-blue);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        a.link:hover {
            color: #818cf8;
            text-decoration: underline;
        }

        .admin-section {
            background-color: var(--bg-card);
            backdrop-filter: blur(12px);
            border-radius: var(--card-radius);
            padding: 2.5rem;
            border: 1px solid var(--border-color);
            margin-top: 2rem;
            box-shadow: var(--shadow-md);
        }

        .admin-section>p {
            color: var(--text-muted);
            margin-top: -1rem;
            margin-bottom: 2rem;
            font-size: 1rem;
            line-height: 1.5;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
        }

        .form-group h4 {
            margin: 0;
            color: var(--text-main);
            font-size: 1.05rem;
            font-weight: 600;
        }

        .form-group p {
            margin: 0;
            font-size: 0.9rem;
            color: var(--text-muted);
            line-height: 1.4;
        }

        .form-group input {
            padding: 0.85rem 1.25rem;
            border-radius: var(--input-radius);
            border: 1px solid rgba(255, 255, 255, 0.1);
            background-color: rgba(15, 23, 42, 0.6);
            color: var(--text-main);
            outline: none;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            box-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.05);
        }

        .form-group input:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
            background-color: rgba(15, 23, 42, 0.8);
        }

        .form-group input::placeholder {
            color: #475569;
        }

        .btn-small {
            padding: 0.7rem 1.2rem;
            font-size: 0.9rem;
        }

        .notification {
            padding: 1rem 1.5rem;
            margin-bottom: 2rem;
            border-radius: var(--input-radius);
            font-weight: 500;
            display: flex;
            align-items: center;
            animation: slideDown 0.4s ease-out;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Segmented Control Navigation */
        .nav-tabs {
            display: flex;
            background: rgba(30, 41, 59, 0.5);
            padding: 0.5rem;
            border-radius: 12px;
            margin-bottom: 2.5rem;
            border: 1px solid var(--border-color);
            width: fit-content;
            margin-left: auto;
            margin-right: auto;
        }

        .nav-btn {
            background: transparent;
            color: var(--text-muted);
            border: none;
            padding: 0.75rem 1.5rem;
            font-size: 0.95rem;
            font-weight: 500;
            cursor: pointer;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nav-btn:hover {
            color: var(--text-main);
        }

        .nav-btn.active {
            background: var(--primary-blue);
            color: white;
            box-shadow: var(--shadow-sm);
        }

        .tab-content {
            display: none;
            animation: fadeIn 0.4s ease-out;
            width: 100%;
        }

        .tab-content.active {
            display: block;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .notify-success {
            background: rgba(16, 185, 129, 0.1);
            border: 1px solid rgba(16, 185, 129, 0.2);
            color: #34d399;
        }

        .notify-error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.2);
            color: #f87171;
        }

        hr {
            border: none;
            border-top: 1px solid var(--border-color);
            margin: 2.5rem 0;
        }

        code {
            background: rgba(0, 0, 0, 0.3);
            padding: 0.2rem 0.4rem;
            border-radius: 4px;
            font-family: monospace;
            color: var(--text-main);
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="header">
            <h1>Termux Admin Panel</h1>
            <p>Discord Bot & HWID Session Manager</p>
        </div>

        <nav class="nav-tabs">
            <button class="nav-btn active" data-tab="main-page">Dashboard</button>
            <button class="nav-btn" data-tab="key-page">Key Logs</button>
            <button class="nav-btn" data-tab="manage-bot">System Config</button>
            <button class="nav-btn" data-tab="manage-message">UI Manager</button>
        </nav>

        <% if (typeof alert !=='undefined' && alert) { %>
            <div class="notification <%= alert.type === 'success' ? 'notify-success' : 'notify-error' %>">
                <%- alert.message %>
            </div>
            <% } %>

                <div id="main-page" class="tab-content active">
                    <div class="stats-grid">
                        <div class="card">
                            <h3>System Status</h3>
                            <p class="value">
                                <span class="status-dot <%= state.botOnline ? 'online' : 'offline' %>"></span>
                                <%= state.botOnline ? 'Online' : 'Offline' %>
                            </p>
                        </div>
                        <div class="card">
                            <h3>Total Keys Generated</h3>
                            <p class="value">
                                <%= state.totalKeysGenerated %>
                            </p>
                        </div>
                        <div class="card">
                            <h3>Active Keys (24h)</h3>
                            <p class="value">
                                <%= typeof activeCount !=='undefined' ? activeCount : 0 %>
                            </p>
                        </div>
                        <div class="card">
                            <h3>Expired Keys</h3>
                            <p class="value">
                                <%= typeof expiredCount !=='undefined' ? expiredCount : 0 %>
                            </p>
                        </div>
                    </div>

                    <div class="controls">
                        <form action="/api/bot/toggle" method="POST">
                            <% if (state.botOnline) { %>
                                <button type="submit" class="btn stop">Shut Down Bot</button>
                                <% } else { %>
                                    <button type="submit" class="btn">Start Discord Bot</button>
                                    <% } %>
                        </form>
                        <button class="btn" style="background: rgba(255,255,255,0.1); color: white; box-shadow: none;"
                            onclick="location.reload()">Refresh Sync</button>
                    </div>
                </div>

                <div id="key-page" class="tab-content">
                    <div class="logs">
                        <h2>Active Backup Keys</h2>
                        <p style="color: var(--text-muted); margin-bottom: 1.5rem;">Keys dynamically synced from Termux
                            sessions via the Backup Updater.</p>
                        <% if (typeof backupKeys !=='undefined' && backupKeys.length> 0) { %>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Timestamp</th>
                                        <th>Discord Profile</th>
                                        <th>Platoboost Key</th>
                                        <th style="text-align: right;">Quick Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% backupKeys.forEach(function(log) { %>
                                        <tr>
                                            <td>
                                                <%= log.time %>
                                            </td>
                                            <td>
                                                <strong>
                                                    <%= log.discordId %>
                                                </strong><br>
                                                <small style="color:var(--text-muted); font-family:monospace;">
                                                    <%= log.hwid %>
                                                </small>
                                            </td>
                                            <td>
                                                <code
                                                    style="color:var(--success); background:rgba(16,185,129,0.1); font-size:0.85rem;"><%= log.key %></code>
                                            </td>
                                            <td
                                                style="text-align: right; display:flex; gap:0.5rem; justify-content:flex-end;">
                                                <form action="/api/admin/reset-hwid" method="POST" style="margin:0;">
                                                    <input type="hidden" name="key" value="<%= log.key %>">
                                                    <button type="submit" class="btn btn-small"
                                                        style="padding:0.4rem 0.8rem; font-size:0.8rem;">Reset
                                                        HWID</button>
                                                </form>
                                                <form action="/api/admin/delete-key" method="POST" style="margin:0;">
                                                    <input type="hidden" name="key" value="<%= log.key %>">
                                                    <button type="submit" class="btn btn-small stop"
                                                        style="padding:0.4rem 0.8rem; font-size:0.8rem;">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <p style="text-align:center; color:var(--text-muted); padding: 2rem 0;">No active Termux
                                    sessions have been synced yet.</p>
                                <% } %>
                    </div>
                </div>

                <div id="manage-bot" class="tab-content">
                    <div class="admin-section">
                        <h2>Advanced Management</h2>
                        <p>Direct overrides for the hardware ID linking and relay system.</p>
                        <div class="form-grid">
                            <div class="form-group">
                                <h4>Generate Instant Key</h4>
                                <p>Generate a raw Admin Key string to paste directly into Termux (Bypasses Platoboost).
                                </p>
                                <form action="/api/admin/create-instant-key" method="POST"
                                    style="display:flex; flex-direction:column; gap:0.75rem; margin-top:0.5rem;">
                                    <button type="submit" class="btn btn-small"
                                        style="background: var(--success);">Generate Admin Key</button>
                                </form>
                            </div>

                            <div class="form-group">
                                <h4>Generate Bypass Link</h4>
                                <p>Bypass Discord and get a direct Platorelay link instantly.</p>
                                <form action="/api/admin/create-key" method="POST"
                                    style="display:flex; flex-direction:column; gap:0.75rem; margin-top:0.5rem;">
                                    <button type="submit" class="btn btn-small">Generate Bypass Link</button>
                                </form>
                            </div>

                            <div class="form-group">
                                <h4>Blacklist / Revoke</h4>
                                <p>Permanently invalidate a specific user's generated key.</p>
                                <form action="/api/admin/delete-key" method="POST"
                                    style="display:flex; flex-direction:column; gap:0.75rem; margin-top:0.5rem;">
                                    <input type="text" name="key" placeholder="Enter Platoboost Key" required>
                                    <button type="submit" class="btn btn-small stop">Revoke Access</button>
                                </form>
                            </div>

                            <div class="form-group">
                                <h4>Forcible HWID Reset</h4>
                                <p>Unbind a key from a specific device if Discord linking fails.</p>
                                <form action="/api/admin/reset-hwid" method="POST"
                                    style="display:flex; flex-direction:column; gap:0.75rem; margin-top:0.5rem;">
                                    <input type="text" name="key" placeholder="Enter Platoboost Key" required>
                                    <button type="submit" class="btn btn-small">Reset Device Binding</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="manage-message" class="tab-content">
                    <div class="admin-section">
                        <h2>Bot Appearance Manager</h2>
                        <p>Customize the Discord UI sent when you type <code>/setup</code>. Save to instantly push the
                            update to Discord.</p>

                        <form action="/api/admin/update-embed" method="POST"
                            style="display: flex; flex-direction: column; gap: 1.5rem; margin-top: 2rem;">

                            <div class="form-grid">
                                <div class="form-group" style="background:transparent; border:none; padding:0;">
                                    <h4>Embed Title</h4>
                                    <input type="text" name="title"
                                        value="<%= typeof embedConfig !== 'undefined' ? embedConfig.title : 'REblox Authentication' %>"
                                        placeholder="E.g., REblox Authentication">
                                </div>

                                <div class="form-group" style="background:transparent; border:none; padding:0;">
                                    <h4>Hex Color Code</h4>
                                    <input type="text" name="color"
                                        value="<%= typeof embedConfig !== 'undefined' ? embedConfig.color : '#6366f1' %>"
                                        placeholder="#6366f1">
                                </div>
                            </div>

                            <div class="form-group" style="background:transparent; border:none; padding:0;">
                                <h4>Embed Description</h4>
                                <input type="text" name="description"
                                    value="<%= typeof embedConfig !== 'undefined' ? embedConfig.description : 'Click one of the buttons below to interact with the Free Key System.' %>"
                                    placeholder="E.g., Click below to get your key.">
                            </div>

                            <div class="form-grid">
                                <div class="form-group" style="background:transparent; border:none; padding:0;">
                                    <h4>Large Banner Image URL (Optional)</h4>
                                    <input type="url" name="image"
                                        value="<%= typeof embedConfig !== 'undefined' ? embedConfig.image : '' %>"
                                        placeholder="https://imgur.com/your-image.png">
                                </div>

                                <div class="form-group" style="background:transparent; border:none; padding:0;">
                                    <h4>Small Thumbnail URL (Optional)</h4>
                                    <input type="url" name="thumbnail"
                                        value="<%= typeof embedConfig !== 'undefined' ? embedConfig.thumbnail : '' %>"
                                        placeholder="https://imgur.com/your-logo.png">
                                </div>
                            </div>

                            <button type="submit" class="btn" style="align-self: flex-start; margin-top: 1rem;">Deploy
                                Appearance Setup</button>
                        </form>
                    </div>
                </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const tabs = document.querySelectorAll('.nav-btn');
            const contents = document.querySelectorAll('.tab-content');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));

                    tab.classList.add('active');

                    const targetId = tab.getAttribute('data-tab');
                    document.getElementById(targetId).classList.add('active');
                });
            });
        });
    </script>
</body>

</html>